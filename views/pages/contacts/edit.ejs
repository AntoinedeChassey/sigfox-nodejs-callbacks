<div class="jumbotron text-center">
    <h1>Editing <%= contact.firstname %> <%= contact.lastname %></h1>
</div>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">

        <% if (errors.length > 0) { %>
        <div class="alert alert-danger">
            <% for (error of errors) { %>
            <%= error %><br>
            <% } %>
        </div>
        <% } %>

        <form action="/contacts/<%= contact.slug %>" method="POST">

            <div class="form-group">
                <label>Contact id</label>
                <input type="text" name="contactId" class="form-control" value="<%= contact.contactId %>">
            </div>

            <div class="form-group">
                <label>First Name</label>
                <input type="text" name="firstname" class="form-control" value="<%= contact.firstname %>">
            </div>

            <div class="form-group">
                <label>Last Name</label>
                <input type="text" name="lastname" class="form-control" value="<%= contact.lastname %>">
            </div>

            <div class="form-group">
                <label>Phone</label>
                <input type="text" name="phone" class="form-control" value="<%= contact.phone %>">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg">Update</button>
            </div>

        </form>

    </div>
</div>