<div class="jumbotron text-center">
    <h1>All Messages</h1>
</div>

<% if (success.length > 0) { %>
<div class="alert alert-success"><%= success %></div>
<% } %>

<table class="table table-bordered table-hover table-striped">
    <thead>
    <tr>
        <th>Message Name</th>
        <th>Description</th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    <% for (var message of messages) { %>
    <tr>
        <td><%= message.name %></td>
        <td><%= message.description %></td>
        <td>
            <a href="/messages/<%= message.slug %>" class="btn btn-sm btn-primary">View</a>
            <a href="/messages/<%= message.slug %>/edit" class="btn btn-sm btn-primary">Edit</a>
            <a href="/messages/<%= message.slug %>/delete" class="btn btn-sm btn-danger">Delete</a>
        </td>
    </tr>
    <% } %>

    </tbody>
</table>